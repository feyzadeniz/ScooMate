<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScooMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScooMate.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    @{
        bool showNavbar = Context.Request.Path != "/Kullanici/GirisYap" &&
        Context.Request.Path != "/Kullanici/KayitOl";
    }

    @if (showNavbar)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">ScooMate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1"></i>Anasayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "ButcePlanlama")">
                                <i class="fas fa-wallet me-1"></i>Bütçe Planlaması
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Istatistik")">
                                <i class="fas fa-chart-bar me-1"></i>İstatistikler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Yatirim")">
                                <i class="fas fa-chart-line me-1"></i>Yatırım
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="odemelerDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-money-bill-wave me-1"></i>Ödemeler Takibi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="odemelerDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "FaturaTakip")">
                                        <i class="fas fa-file-invoice me-1"></i>Fatura Takibi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "BorcTakip")">
                                        <i class="fas fa-credit-card me-1"></i>Borç Takibi
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle position-relative" href="#" id="bildirimDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                      id="bildirimSayisi">
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="bildirimDropdown"
                                 style="width: 320px; max-height: 400px; overflow-y: auto;">
                                <div class="d-flex justify-content-between align-items-center px-3 py-2 border-bottom">
                                    <h6 class="mb-0">Bildirimler</h6>
                                    <button class="btn btn-sm btn-outline-secondary" id="bildirimleriTemizle">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                                <div id="bildirimListesi">
                                    <!-- bildirimler buraya gelcek -->
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profil", "Kullanici")">
                                <i class="fas fa-user me-1"></i>Profil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("CikisYap", "Kullanici")">
                                <i class="fas fa-sign-out-alt me-1"></i>Çıkış
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ScooMate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

