@model ScooMate.Models.Kullanici

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="card-title mb-0">Profil Bilgileri</h2>
                        <button class="btn btn-primary" id="duzenleBtn">
                            <i class="fas fa-edit me-1"></i>Düzenle
                        </button>
                    </div>

                    <div id="profilBilgileri">
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Ad:</div>
                            <div class="col-md-8">@Model.Ad</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Soyad:</div>
                            <div class="col-md-8">@Model.Soyad</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">E-posta:</div>
                            <div class="col-md-8">@Model.Email</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Telefon:</div>
                            <div class="col-md-8">@Model.Telefon</div>
                        </div>
                    </div>

          @using (Html.BeginForm("ProfilGuncelle", "Kullanici", FormMethod.Post, new { id = "profilForm", style = "display: none;" }))
          {
            @Html.AntiForgeryToken()
                          <div class="mb-3">
                              <label class="form-label">Ad</label>
              @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                          </div>
                          <div class="mb-3">
                              <label class="form-label">Soyad</label>
              @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.Soyad, "", new { @class = "text-danger" })
                          </div>
                          <div class="mb-3">
                              <label class="form-label">E-posta</label>
              @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
              @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                          </div>
                          <div class="mb-3">
                              <label class="form-label">Telefon</label>
              @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "text-danger" })
                          </div>
                          <div class="d-flex justify-content-end gap-2">
                              <button type="button" class="btn btn-secondary" id="iptalBtn">İptal</button>
                              <button type="submit" class="btn btn-primary">Kaydet</button>
                          </div>
          }
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title mb-4">Şifre Değiştir</h3>
          @using (Html.BeginForm("SifreDegistir", "Kullanici", FormMethod.Post, new { id = "sifreForm" }))
          {
            @Html.AntiForgeryToken()
                          <div class="mb-3">
                              <label class="form-label">Mevcut Şifre</label>
                              <input type="password" name="mevcutSifre" class="form-control" required />
                          </div>
                          <div class="mb-3">
                              <label class="form-label">Yeni Şifre</label>
                              <input type="password" name="yeniSifre" class="form-control" required />
                          </div>
                          <div class="mb-3">
                              <label class="form-label">Yeni Şifre (Tekrar)</label>
                              <input type="password" name="yeniSifreTekrar" class="form-control" required />
                          </div>
                          <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
          }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
      <script>
          document.getElementById('duzenleBtn').addEventListener('click', function() {
              document.getElementById('profilBilgileri').style.display = 'none';
              document.getElementById('profilForm').style.display = 'block';
              this.style.display = 'none';
          });

          document.getElementById('iptalBtn').addEventListener('click', function() {
              document.getElementById('profilBilgileri').style.display = 'block';
              document.getElementById('profilForm').style.display = 'none';
              document.getElementById('duzenleBtn').style.display = 'block';
          });
      </script>
} 