@model ScooMate.Models.Kullanici

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Giriş Yap</h3>
                    @using (Html.BeginForm("GirisYap", "Kullanici", FormMethod.Post, new
                    {
                        @class = "login-form",
                        onsubmit = "return true;"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                onkeypress="if(event.keyCode==13) { document.getElementById('girisButton').click(); }">
                        </div>
                        <div class="form-group mb-3">
                            <label for="sifre">Şifre</label>
                            <input type="password" class="form-control" id="sifre" name="sifre" required
                                onkeypress="if(event.keyCode==13) { document.getElementById('girisButton').click(); }">
                        </div>
                        <div class="text-danger">
                            @Html.ValidationSummary(true)
                        </div>
                        <button type="submit" class="btn btn-primary w-100" id="girisButton">Giriş Yap</button>
                    }
                    <div class="mt-3 text-center">
                        <p>Hesabınız yok mu? @Html.ActionLink("Kayıt Ol", "KayitOl", "Kullanici")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
