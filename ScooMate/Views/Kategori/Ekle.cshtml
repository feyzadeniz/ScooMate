@model ScooMate.Models.Kategori

<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="card-title mb-0">Yeni Kategori Ekle</h2>
      </div>

      @if (!ViewData.ModelState.IsValid)
      {
        <div class="alert alert-danger">
          @Html.ValidationSummary(false)
        </div>
      }

      @using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
      {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
          <label for="KategoriAdi">Kategori Adı</label>
          @Html.TextBoxFor(m => m.KategoriAdi, new { @class = "form-control", required = "required" })
          @Html.ValidationMessageFor(m => m.KategoriAdi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
          <label for="OzelSimge">Özel Simge (İsteğe bağlı)</label>
          <input type="file" name="OzelSimge" class="form-control" accept=".png" />
          <small class="form-text text-muted">PNG formatında simge yükleyebilirsiniz. Yüklemezseniz kategori adına uygun
            bir simge otomatik seçilecektir.</small>
        </div>

        <div class="form-group mb-3">
          <label for="Aciklama">Açıklama (İsteğe bağlı)</label>
          @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control", rows = "3" })
          @Html.ValidationMessageFor(m => m.Aciklama, "", new { @class = "text-danger" })
        </div>

        <div class="mt-3">
          <button type="submit" class="btn btn-primary">Kategori Ekle</button>
          <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">İptal</a>
        </div>
      }
    </div>
  </div>
</div>